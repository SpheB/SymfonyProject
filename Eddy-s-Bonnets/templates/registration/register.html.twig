{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">Register</h3>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 ">
                        <div class="mb60">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="row">
                                            <div id="message" class="col-sm-12"></div>
                                            <div class="col-sm-12">

                                                {{ form_start(registrationForm) }}
                                                {{ form_row(registrationForm.email, { 'attr': {'placeholder': 'Your Email', 'class': 'form-control col-md-4 mb20'} }) }}
                                                {{ form_row(registrationForm.pseudo, { 'attr': {'placeholder': 'Your Pseudo', 'class': 'form-control col-md-4 mb20'} }) }}
                                                <div class="col-sm-12 text-uppercase text-muted">
                                                    {{ form_label(registrationForm.avatar) }}
                                                </div>
                                                {{ form_widget(registrationForm.avatar, { 'attr': {'class': 'form-control col-md-4 mb20'} }) }}
                                                {{ form_row(registrationForm.plainPassword, { 'attr': {'placeholder': 'Your Password', 'class': 'form-control col-md-4 mb20'} }) }}

                                                <button class="btn  btn-primary mt30 pull-right">Register</button>
                                                {{ form_end(registrationForm) }}
                                            </div>
                                        </div>
                                    </div> 
                                </div>
                            </div>
                        </div>                           
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
