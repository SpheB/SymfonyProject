{% extends 'base.html.twig' %}

{% block title %}Hello ZoneFanController!{% endblock %}

{% block body %}
    <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">Concours du Moment</h3>
                    </div>
                </div>
            </div>                   
            <div class="container">
                <div class="row">
                    {% if ceconcours != null %}
                        <div class="col-sm-12 col-sm-offset-1">
                            <div class="col-sm-10">



                                {% if pastvote != null %}
                                    <div style="padding: 0px" class="col-sm-12 text-center">
                                        <div class="panel-group styled-accordion" id="accordion" role="tablist" aria-multiselectable="true">
                                            <div class="panel panel-default">
                                                <div class="panel-heading panel-open smoothie" role="tab" id="headingOne">
                                                    <h4 class="panel-title">
                                                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Vous avez vot√© pour ce concours</a>
                                                    </h4>
                                                </div>
                                                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                                    <div class="panel-body">
                                                        <div class="col-sm-5 col-sm-offset-1">

                                                            <div class="col-sm-12 masonry-portfolio-item mb30 design">
                                                                <div class="hover-effect smoothie">
                                                                    <a href="#" class="smoothie">
                                                                        <img src="{{ asset('/dossierFichiers/' ~ pastvote.idlook.picture) }}" alt="Image" class="img-responsive smoothie"></a>
                                                                    <div class="hover-overlay smoothie text-center">
                                                                    </div>
                                                                    <div class="hover-caption dark-overlay smoothie text-center">
                                                                        <div class="vertical-align-bottom">
                                                                            <a href="{{ asset('/dossierFichiers/' ~ pastvote.idlook.picture) }}" class="lb-link btn btn-primary mb20">View Image <i class="fa fa-plus smoothie"></i></a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>   
                                                        </div>
                                                        <div class="col-sm-5 text-left">
                                                            <p><strong>LOOK CHOISI:</strong> {{pastvote.idlook.description}}</p>
                                                            <p><strong>STYLE:</strong> {{pastvote.idlook.idstyle.typestyle}}</p>
                                                            <p><strong>DATE DU VOTE:</strong> {{pastvote.datevote|date('d/m/Y')}}</p></p>
                                                        </div>  
                                                        <div class="col-sm-12">
                                                            <hr>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>                                                
                                    </div>
                                {% endif %}






                                <div class="row project-item wow fadeIn" data-wow-delay="0.2s">
                                    <div class="col-sm-9">
                                        <p>{{ceconcours.commentconcours}}</p>
                                    </div>
                                    <div class="col-sm-3">
                                        <p><strong>THEME:</strong> {{ceconcours.theme}}</p>
                                        <p><strong>FROM:</strong> {{ceconcours.datedebut|date('d/m/Y')}}</p>
                                        <p><strong>TO:</strong> {{ceconcours.datefin|date('d/m/Y')}}</p></p>
                                    </div>
                                </div>
                                <br><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="masonry-portfolio row">
                                    <div>
                                        <div class="masonry-portfolio-items">
                                            <div class="row">

                                                {% for look in ceconcours.looks|reverse %}
                                                    <div class="col-sm-4 masonry-portfolio-item mb30 design">
                                                        <div class="hover-effect smoothie">
                                                            <a href="#" class="smoothie">
                                                                <img src="{{ asset('/dossierFichiers/' ~ look.picture) }}" alt="Image" class="img-responsive smoothie"></a>
                                                            <div class="hover-overlay smoothie text-center">
                                                                <div class="vertical-align-bottom">
                                                                    <h4>{{look.description}}</h4>

                                                                </div>
                                                            </div>
                                                            <div class="hover-caption dark-overlay smoothie text-center">
                                                                <div class="vertical-align-bottom">
                                                                    <a href="{{ asset('/dossierFichiers/' ~ look.picture) }}" class="lb-link btn btn-primary mb20">View Image <i class="fa fa-plus smoothie"></i></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {% if pastvote == null %}
                                                            <div class="text-center">        
                                                                <a class="btn btn-primary mt30 btn-lg btn-block" href={{"/zone/fan/concours/calcul/"~ceconcours.id~"/"~look.id}}>Vote</a>
                                                            </div>
                                                        {% endif %}
                                                    </div>                              
                                                {% endfor %}         

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center">        
                            <a class="btn btn-primary mt30 btn-block" href="/">Pas de Concours actuellement</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
</div>
{% endblock %}
