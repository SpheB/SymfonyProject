{% extends 'base.html.twig' %}

{% block title %}Hello ZoneFanController!{% endblock %}

{% block body %}
    <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">Contest of the Moment</h3>
                    </div>
                </div>
            </div>                   
            <div class="container">
                <div class="row">
                    {% if ceconcours != null %}
                        <div class="col-sm-12 col-sm-offset-1">
                            <div class="col-sm-10">
                                <div class="row project-item wow fadeIn" data-wow-delay="0.2s">
                                    <div class="col-sm-9">
                                        <p>{{ceconcours.commentconcours}}</p>
                                        -                                </div>
                                    <div class="col-sm-3">
                                        <p><strong>THEME:</strong> {{ceconcours.theme}}</p>
                                        <p><strong>FROM:</strong> {{ceconcours.datedebut|date('d/m/Y')}}</p>
                                        <p><strong>TO:</strong> {{ceconcours.datefin|date('d/m/Y')}}</p></p>
                                    </div>
                                </div>
                                <br><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="masonry-portfolio row">
                                    <div>
                                        <div class="masonry-portfolio-items">
                                            <div class="row">

                                                {% for look in ceconcours.looks|reverse %}
                                                    <div class="col-sm-4 masonry-portfolio-item mb30 design">
                                                        <div class="hover-effect smoothie">
                                                            <a href="#" class="smoothie">
                                                                <img src="{{ asset('/dossierFichiers/' ~ look.picture) }}" alt="Image" class="img-responsive smoothie"></a>
                                                            <div class="hover-overlay smoothie text-center">
                                                                <div class="vertical-align-bottom">
                                                                    <h4>{{look.description}}</h4>

                                                                </div>
                                                            </div>
                                                            <div class="hover-caption dark-overlay smoothie text-center">
                                                                <div class="vertical-align-bottom">
                                                                    <a href="{{ asset('/dossierFichiers/' ~ look.picture) }}" class="lb-link btn btn-primary mb20">View Image <i class="fa fa-plus smoothie"></i></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="text-center">        
                                                            <a class="btn btn-primary mt30 btn-lg btn-block" href={{"/zone/fan/concours/calcul/"~ceconcours.id~"/"~look.picture}}>Vote</a>
                                                        </div>
                                                    </div>                              
                                                {% endfor %}         

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center">        
                            <a class="btn btn-primary mt30 btn-block" href="/">Pas de Concours actuellement</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
</div>
{% endblock %}
