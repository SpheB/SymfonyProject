{% extends 'base.html.twig' %}

{% block title %}Hello ZoneFanController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    ON EST DANS CONCOURS
    <br>
    {% if ceconcours != null %}
        {{ceconcours.id}} | {{ceconcours.theme}} | du {{ceconcours.datedebut|date('d/m/Y')}} au {{ceconcours.datefin|date('d/m/Y')}} | {{ceconcours.commentconcours}}
        <br>
        {% for look in ceconcours.looks|reverse %}
        {#éventuellement vote redirigevers action qui redirige vers action??? ou utiliser option choice de entitytype ou input indépendant...#}
            {{look.id}} | {{look.picture}} | {{look.idstyle.id}} | {{look.idstyle.typestyle}}
            <br>
        {% endfor %}
    
    {% endif %}
</div>
{% endblock %}
