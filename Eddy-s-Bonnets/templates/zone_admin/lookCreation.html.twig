                                {{ form_widget(formulaireLook.picture, { 'attr': {'class': 'form-control col-md-4 mb20'} }) }}
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-12 text-center">
                        <div class="col-sm-4 col-sm-offset-4">
                            <div class="text-center">    
                                <br> 
                                <br>
                                <input type="submit" class="btn btn-primary mt30 btn-lg btn-block" value="Envoyer" />
                            </div>
                        </div>
                        {{ form_end (formulaireLook) }}
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}