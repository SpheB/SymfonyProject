                        <div class="col-sm-12">
                            <div class="col-sm-4 text-uppercase text-muted">
                                {{ form_label(formulaireLook.date_look) }}
                            </div>
                            <div class="col-sm-7 text-uppercase text-muted">
                                {{ form_widget(formulaireLook.date_look, { 'attr': {'class': 'form-control col-md-4 mb20'} }) }}
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="col-sm-4 text-uppercase text-muted">
                                {{ form_label(formulaireLook.picture) }}
