{% extends 'base.html.twig' %}

{% block title %}Eddy's Admin | News{% endblock %}


{% block body %}


    <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">Toutes les news</h3>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row mb40">

                    <div class="col-sm-4 col-sm-offset-4">
                        <div class="text-center">        
                            <a class="btn btn-primary mt30 btn-lg btn-block" href={{"/zone/admin/news/creation"}}>Add News</a>
                        </div>
                    </div>


                    {% for valeur in lesnews|reverse %}
                        <ul>
                            <li>{{valeur.id}} </li>
                            <li>{{valeur.titre}} </li>
                            <li>{{valeur.accroche}} </li>
                            <li>{{valeur.textnews}} </li>
                            <li>{{valeur.datenews |date('d/m/Y')}} </li>
                            <li>{{valeur.picturenews}} </li>

                            <a class="btn" href="/zone/admin/news/one/{{valeur.id}}">Modifier</a>
                        </ul>
                    {% endfor %}



                </div>
            </div>
        </div>
    </section>
{% endblock %}