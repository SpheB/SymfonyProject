{% block body %}

    <h1>Toutes Les News</h1>
    <br>
     <a class="btn" href="/zone/admin/news/creation">New News</a>
    <br>
    {% for valeur in lesnews|reverse %}
        <ul>
            <li>{{valeur.id}} </li>
            <li>{{valeur.titre}} </li>
            <li>{{valeur.textnews}} </li>
            <li>{{valeur.datenews |date('d/m/Y')}} </li>
            <li>{{valeur.picturenews}} </li>

            <a class="btn" href="/zone/admin/news/one/{{valeur.id}}">Modifier</a>
        </ul>
    {% endfor %}

{% endblock %}