{% extends 'base.html.twig' %}

{% block title %}Eddy's Admin | Concours{% endblock %}

{% block body %}


    <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">Tous les concours</h3>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row mb40">

                    <div class="col-sm-4 col-sm-offset-4">
                        <div class="text-center">        
                            <a class="btn btn-primary mt30 btn-lg btn-block" href={{"/zone/admin/concours/creation"}}>Add Concours</a>
                        </div>
                        <br>
                        <br>
                        <br>
                    </div>
                        
                    <div class="container">
                        <div class="row mb40">

                            <table class="table  table-striped">
                                <thead style="background-color: #333; color: white">
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Theme</th>
                                        <th scope="col">Début</th>
                                        <th scope="col">Fin</th>
                                        <th scope="col">Gagnant</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>

                                <tbody>

                                    {% for valeur in lesconcours|reverse %}

                                        <tr>
                                            <th scope="row">{{valeur.id}} </th>
                                            <td>{{valeur.theme}}</td>
                                            <td>{{valeur.datedebut|date('d/m/Y')}}</td>
                                            <td>{{valeur.datefin|date('d/m/Y')}}</td>
                                            <td>
                                                {% if valeur.gagnant != null %}
                                                    <a class="btn" href="/zone/admin/looks/one/{{valeur.gagnant.id}}">{{valeur.gagnant.id}}</a>
                                                {% else %}
                                                    en cours
                                                {% endif %}
                                            </td>
                                            <td>        
                                                <a class="btn" href="/zone/admin/concours/one/{{valeur.id}}">Détails</a>
                                            </td>
                                        </tr>                           
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

