{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
        <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">Get In Touch</h3>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 ">
                        <div class="mb60">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="row">
                                            <div id="message" class="col-sm-12"></div>
                                            <div class="col-sm-12">
                                                {{form_start(formulaireMail)}}
                                                {#{form_widget(formulaireMail, { 'attr': {'class': 'form-control col-md-4 mb20'} })}#}
                                                    {{ form_row(formulaireMail.your_email, { 'attr': {'placeholder': 'Your Email', 'class': 'form-control col-md-4 mb20'} })}}
                                                    {{ form_row(formulaireMail.message, { 'attr': {'placeholder': 'Your Message', 'class': 'form-control col-md-4 mb20'} })}}
                                                <input class="btn btn-primary mt30 pull-right" type="submit" value="Envoyer"/>
                                                {{form_end(formulaireMail)}}
                                            </div>
                                        </div>
                                    </div> 
                                </div>
                            </div>
                        </div>                           
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
