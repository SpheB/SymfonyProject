{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <section class="white-wrapper">
        <div class="section-inner">
            <div class="container">
                <div class="row mb60 text-center">
                    <div class="col-sm-12">
                        <h3 class="section-title">News List</h3>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">

                        {% for valeur in mesnews|reverse %}
                            {% if loop.index is odd  %}
                                <div class="col-sm-12">
                                    <div class="col-sm-6 nopaddingleftright blog-list-item mb90">
                                        <div class="hover-effect smoothie mb40">
                                            <a href="#" class="smoothie">
                                                <img src="assets/images/blog/blog-1.jpg" alt="Image" class="img-responsive smoothie"></a>
                                            <div class="hover-overlay smoothie text-center">
                                                <div class="vertical-align-bottom">
                                                    <h4>{{valeur.accroche}}</h4>
                                                    <span class="item-category-span">{{valeur.datenews|date('d/m/Y')}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 blog-list-item mb90">
                                        <h4>{{valeur.titre}}</h4>
                                        <p class="mb20">{{valeur.textnews}} </p>
                                    </div>
                                </div>
                            {%else%}
                                <div class="col-sm-12">
                                    <div class="col-sm-6  blog-list-item mb90">
                                        <h4>{{valeur.titre}}</h4>
                                        <p class="mb20">{{valeur.textnews}} </p>
                                    </div>
                                    <div class="col-sm-6 nopaddingleftright blog-list-item mb90">
                                        <div class="hover-effect smoothie mb40">
                                            <a href="#" class="smoothie">
                                                <img src="assets/images/blog/blog-1.jpg" alt="Image" class="img-responsive smoothie"></a>
                                            <div class="hover-overlay smoothie text-center">
                                                <div class="vertical-align-bottom">
                                                    <h4>{{valeur.accroche}}</h4>
                                                    <span class="item-category-span">{{valeur.datenews|date('d/m/Y')}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                        {% endfor %}   

                    </div>
                </div>
            </div>
        </div>
    </section>

